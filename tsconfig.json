{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
    },
    "strict": true,
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },

  "include": [
    "src/**/*",
    "*d.ts"
  ],
  "exclude": ["node_modules"]
}
